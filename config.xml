<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <!-- <content src="https://corp-st-dev.4lapy.ru/" /> -->
    <!-- <access origin="*"></access> -->
    <access origin="*" />
    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
        <application android:usesCleartextTraffic="true" />
    </edit-config>
    <allow-navigation href="*" />
    <allow-navigation href="https://corp-st-dev.4lapy.ru/*" />
    <allow-navigation href="https://192.168.1.49/*" />
    <allow-navigation href="http://192.168.1.49/mobile_app/*" />
    <allow-navigation href="https://cordova.vercel.app/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <plugin name="phonegap-plugin-barcodescanner" />
    <preference name="SplashScreen" value="logo" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#EFEFEF" />
    <preference name="StatusBarStyle" value="default" />

    <platform name="android">
        <resource-file src="google-services.json" target="/app/google-services.json" />
    </platform>


</widget>